<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="myVModel"
            type="com.example.remindermvvm.viewModels.TaskViewModel" />
    </data>
<RelativeLayout

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/border_style"
    android:layout_margin="8dp"
    android:padding="5dp"
    >

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/is_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"

        android:checked="false"
        />
<LinearLayout
    android:id="@+id/list_item_layout"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Work on the UI design aldfkalf sadfd d "
        android:layout_toLeftOf="@id/is_completed"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/task_description"
        android:layout_below="@id/task_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingBottom="8dp"
        android:layout_toLeftOf="@id/is_completed"
        android:layout_alignParentStart="true"
        android:text="Task description goes in here asdfalkdf lakdjfla lkdasjf d d  "
        android:textColor="#717171"
        android:textSize="12dp" />

    <TextView

        android:id="@+id/tas_due_date"
        android:layout_below="@id/task_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_alignParentStart="true"
        android:text="Today, Api 21, 2021"
        android:background="@drawable/date_border_style"
        android:textColor="#00BCD4"
        android:textSize="16dp" />

</LinearLayout>



</RelativeLayout>
</layout>